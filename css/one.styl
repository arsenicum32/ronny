.first
  background colortext
.one
  display flex
  justify-content space-between
  background colortext
  width 90%
  margin-left 5%
  .picture
    margin auto
    margin-top 20px
    margin-right 0
    img
      height 240px
      background white
  .video
    margin auto
    margin-top 20px
    display flex
    .str
      position relative
      top 100px
      width 30px
      height 30px
      background white
      border-radius 50%
      margin 10px
    .bottom
      position relative
      left -4px
      width 240px
      height 20px
      background white
      margin auto
      margin-bottom 10px
      color colortext
      text-align center
      border-bottom-left-radius 10px
      border-bottom-right-radius 10px

@media screen and (max-width: 750px)
  .one
    flex-direction column
    justify-content space-around
    padding-bottom 20px
    width 100%
    margin-left 0%
    .picture
    .video
      margin auto
      margin-top 10px
